<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:layout_marginTop="17dp"
            android:id="@+id/button_for_line_chart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#00FF00"
            android:text="LINE CHART" />

        <Button
            android:layout_marginTop="17dp"
            android:layout_below="@+id/button_for_line_chart"
            android:id="@+id/button_for_bar_chart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#00FF00"
            android:text="BAR CHART" />

        <Button
            android:layout_marginTop="17dp"
            android:layout_below="@+id/button_for_bar_chart"
            android:id="@+id/button_for_point_chart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#00FF00"
            android:text="POINT CHART" />


    </LinearLayout>


</RelativeLayout>